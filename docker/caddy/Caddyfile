# =============================================================================
# Caddy Configuration - Reverse Proxy with Automatic SSL
# =============================================================================

# Development configuration (localhost)
:80 {
    # Landing page (default)
    handle {
        reverse_proxy landing:80
    }

    # App routes
    handle /app/* {
        uri strip_prefix /app
        reverse_proxy app:80
    }

    # API routes
    handle /api/* {
        reverse_proxy api:3000
    }
}

# Production configuration (uncomment and configure your domain)
# {$DOMAIN:lms.example.com} {
