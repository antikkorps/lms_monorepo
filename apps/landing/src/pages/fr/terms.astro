    </div>
  </section>

  <section class="py-12 sm:py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <nav class="mb-12 p-6 bg-muted rounded-lg">
        <h2 class="font-semibold text-foreground mb-4">Table des Matieres</h2>
        <ul class="space-y-2">
          {sections.map((section, index) => (
            <li>
              <a href={`#${section.id}`} class="text-muted-foreground hover:text-primary transition-colors">
                {index + 1}. {section.title}
              </a>
            </li>
          ))}
        </ul>
      </nav>

      <div class="prose prose-gray dark:prose-invert max-w-none">
        {sections.map((section, index) => (
          <div id={section.id} class="mb-12 scroll-mt-24">
            <h2 class="text-2xl font-bold text-foreground mb-4">
              {index + 1}. {section.title}
            </h2>
            <div class="text-muted-foreground space-y-4 [&_h4]:text-foreground [&_h4]:font-semibold [&_h4]:mt-6 [&_h4]:mb-2 [&_ul]:list-disc [&_ul]:pl-6 [&_ul]:space-y-2 [&_li]:text-muted-foreground [&_strong]:text-foreground" set:html={section.content} />
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>
