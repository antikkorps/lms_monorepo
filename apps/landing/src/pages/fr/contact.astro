---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/ui/Card.astro';
import Button from '../../components/ui/Button.astro';
import Input from '../../components/ui/Input.astro';
import Textarea from '../../components/ui/Textarea.astro';
import { useTranslations } from '../../i18n';

const t = useTranslations('fr');

const contactReasons = [
  { value: 'general', label: 'Demande generale' },
  { value: 'sales', label: 'Ventes & Tarifs' },
  { value: 'support', label: 'Support technique' },
  { value: 'partnership', label: 'Opportunite de partenariat' },
  { value: 'press', label: 'Presse & Medias' },
];

const quickFaq = [
  {
    question: 'Comment reinitialiser mon mot de passe ?',
    answer: 'Allez sur la page de connexion et cliquez sur "Mot de passe oublie". Vous recevrez un email avec les instructions.',
  },
  {
    question: 'Comment annuler mon abonnement ?',
    answer: 'Vous pouvez annuler a tout moment depuis les parametres de votre compte. Allez dans Parametres > Abonnement > Annuler.',
  },
  {
    question: 'Proposez-vous des remboursements ?',
    answer: 'Oui, nous offrons une garantie de remboursement de 30 jours pour tous les forfaits payants. Contactez le support pour de l\'aide.',
  },
];
---

<Layout
  title="Contact - IQON-IA"
  description="Contactez notre equipe. Nous sommes la pour vous aider avec les demandes commerciales, le support technique, les partenariats et plus."
  lang="fr"
  canonicalPath="/fr/contact"
>
  <section class="pt-24 pb-12 sm:pt-32 sm:pb-16 bg-muted">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl sm:text-5xl font-bold text-foreground">
        {t('contact.title')}
      </h1>
      <p class="mt-4 text-lg text-muted-foreground max-w-2xl mx-auto">
        {t('contact.subtitle')}
      </p>
    </div>
  </section>

  <section class="py-20 sm:py-28">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-3 gap-12 lg:gap-16">
        <div class="lg:col-span-2">
          <Card padding="lg">
            <h2 class="text-2xl font-bold text-foreground mb-6">{t('contact.form.title')}</h2>
            <form class="space-y-6" action="#" method="POST">
              <div class="grid sm:grid-cols-2 gap-6">
                <Input
                  name="firstName"
                  label={t('contact.form.firstName')}
                  placeholder="Jean"
                  required
                />
                <Input
                  name="lastName"
                  label={t('contact.form.lastName')}
                  placeholder="Dupont"
                  required
                />
              </div>

              <Input
                type="email"
                name="email"
                label={t('contact.form.email')}
                placeholder="jean@exemple.com"
                required
              />

              <div class="space-y-1.5">
                <label for="reason" class="block text-sm font-medium text-foreground">
                  {t('contact.form.reason')} <span class="text-destructive ml-1">*</span>
                </label>
                <select
                  id="reason"
                  name="reason"
                  required
                  class="w-full h-10 px-3 py-2 text-sm rounded-lg border border-input bg-background text-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent"
                >
                  <option value="">Selectionnez une raison...</option>
                  {contactReasons.map((reason) => (
                    <option value={reason.value}>{reason.label}</option>
                  ))}
                </select>
              </div>

              <Textarea
                name="message"
                label={t('contact.form.message')}
                placeholder="Comment pouvons-nous vous aider ?"
                rows={5}
                required
              />

              <Button type="submit" fullWidth>
                {t('contact.form.submit')}
              </Button>
            </form>
          </Card>
        </div>

        <div class="space-y-8">
          <Card padding="lg">
            <h3 class="text-lg font-semibold text-foreground mb-4">{t('contact.info.title')}</h3>
            <div class="space-y-4">
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-primary shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <div>
                  <p class="font-medium text-foreground">{t('contact.info.email')}</p>
                  <a href="mailto:hello@lms-platform.com" class="text-muted-foreground hover:text-primary transition-colors">
                    hello@lms-platform.com
                  </a>
                </div>
              </div>
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-primary shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
                <div>
                  <p class="font-medium text-foreground">{t('contact.info.sales')}</p>
                  <a href="mailto:sales@lms-platform.com" class="text-muted-foreground hover:text-primary transition-colors">
                    sales@lms-platform.com
                  </a>
                </div>
              </div>
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-primary shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
                <div>
                  <p class="font-medium text-foreground">{t('contact.info.support')}</p>
                  <a href="mailto:support@lms-platform.com" class="text-muted-foreground hover:text-primary transition-colors">
                    support@lms-platform.com
                  </a>
                </div>
              </div>
            </div>
          </Card>

          <Card padding="lg">
            <h3 class="text-lg font-semibold text-foreground mb-4">Reponses Rapides</h3>
            <div class="space-y-4">
              {quickFaq.map((item) => (
                <details class="group">
                  <summary class="flex items-center justify-between cursor-pointer list-none">
                    <span class="text-sm font-medium text-foreground pr-2">{item.question}</span>
                    <svg class="w-4 h-4 text-muted-foreground shrink-0 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                  </summary>
                  <p class="mt-2 text-sm text-muted-foreground">{item.answer}</p>
                </details>
              ))}
            </div>
            <a href="/fr/faq" class="mt-4 inline-flex items-center gap-2 text-sm text-primary hover:underline font-medium">
              Voir toutes les FAQ
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          </Card>

          <Card padding="lg" class="bg-primary/5 border-primary/20">
            <div class="flex items-start gap-3">
              <svg class="w-5 h-5 text-primary shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <div>
                <p class="font-medium text-foreground">{t('contact.response')}</p>
                <p class="text-sm text-muted-foreground">{t('contact.responseNote')}</p>
              </div>
            </div>
          </Card>
        </div>
      </div>
    </div>
  </section>
</Layout>
