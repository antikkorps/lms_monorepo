---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/sections/Hero.astro';
import Features from '../components/sections/Features.astro';
import Pricing from '../components/sections/Pricing.astro';
import Testimonials from '../components/sections/Testimonials.astro';
import CTA from '../components/sections/CTA.astro';
import { useTranslations, getTranslation } from '../i18n';

const t = useTranslations('en');
const lang = 'en';

const features = [
  {
    icon: 'ai',
    title: t('features.ai.title'),
    description: t('features.ai.description'),
  },
  {
    icon: 'content',
    title: t('features.content.title'),
    description: t('features.content.description'),
  },
  {
    icon: 'progress',
    title: t('features.progress.title'),
    description: t('features.progress.description'),
  },
  {
    icon: 'collab',
    title: t('features.collab.title'),
    description: t('features.collab.description'),
  },
  {
    icon: 'certificate',
    title: t('features.certificate.title'),
    description: t('features.certificate.description'),
  },
  {
    icon: 'mobile',
    title: t('features.mobile.title'),
    description: t('features.mobile.description'),
  },
];

const pricingPlans = [
  {
    name: t('pricing.free.name'),
    price: t('pricing.free.price'),
    period: t('pricing.free.period'),
    description: t('pricing.free.description'),
    features: getTranslation(lang, 'pricing.free.features') as string[],
    cta: t('pricing.free.cta'),
    ctaHref: '/coming-soon',
  },
  {
    name: t('pricing.pro.name'),
    price: t('pricing.pro.price'),
    period: t('pricing.pro.period'),
    description: t('pricing.pro.description'),
    features: getTranslation(lang, 'pricing.pro.features') as string[],
    cta: t('pricing.pro.cta'),
    ctaHref: '/coming-soon?plan=pro',
    popular: true,
    badge: t('pricing.pro.badge'),
  },
  {
    name: t('pricing.team.name'),
    price: t('pricing.team.price'),
    period: t('pricing.team.period'),
    description: t('pricing.team.description'),
    features: getTranslation(lang, 'pricing.team.features') as string[],
    cta: t('pricing.team.cta'),
    ctaHref: '/contact?type=sales',
  },
];

const testimonials = [
  {
    quote: "IQON-IA has transformed how our team learns. The AI-powered recommendations are incredibly accurate and save us hours of searching for the right content.",
    author: "Sarah Chen",
    role: "Learning & Development Manager",
    company: "TechCorp",
  },
  {
    quote: "I've tried many learning platforms, but this one stands out. The personalized learning paths helped me advance my career faster than I ever thought possible.",
    author: "Marcus Johnson",
    role: "Software Engineer",
    company: "StartupXYZ",
  },
  {
    quote: "The team features are exceptional. We can track progress, assign courses, and see real results. Our onboarding time has decreased by 40%.",
    author: "Emily Rodriguez",
    role: "HR Director",
    company: "GlobalTech",
  },
];
---

<Layout
  title="IQON-IA - Modern Learning Management System"
  description="The AI-powered learning platform that empowers individuals and teams to master new skills. Start learning today with personalized courses and certifications."
  canonicalPath="/"
>
  <Hero
    title={t('hero.title')}
    subtitle={t('hero.subtitle')}
    primaryCta={{ text: t('hero.cta.primary'), href: '/coming-soon' }}
    secondaryCta={{ text: t('hero.cta.secondary'), href: '#features' }}
    trustedText={t('hero.trusted')}
  />

  <Features
    title={t('features.title')}
    subtitle={t('features.subtitle')}
    features={features}
  />

  <!-- B2C vs B2B Section -->
  <section class="py-20 sm:py-28">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-foreground">
          Built for everyone
        </h2>
        <p class="mt-4 text-lg text-muted-foreground">
          Whether you're an individual learner or managing a team, we have the right solution for you.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8 lg:gap-12">
        <!-- For Individuals -->
        <div class="bg-card border border-border rounded-2xl p-8 lg:p-10">
          <div class="w-12 h-12 rounded-lg bg-primary/10 text-primary flex items-center justify-center mb-6">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-foreground mb-4">For Individuals</h3>
          <p class="text-muted-foreground mb-6">
            Advance your career with personalized learning paths, AI-powered recommendations, and industry-recognized certifications.
          </p>
          <ul class="space-y-3 mb-8">
            <li class="flex items-center gap-3 text-sm text-muted-foreground">
              <svg class="w-5 h-5 text-green-500 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Personalized learning paths
            </li>
            <li class="flex items-center gap-3 text-sm text-muted-foreground">
              <svg class="w-5 h-5 text-green-500 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              AI-powered content recommendations
            </li>
            <li class="flex items-center gap-3 text-sm text-muted-foreground">
              <svg class="w-5 h-5 text-green-500 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Earn recognized certificates
            </li>
            <li class="flex items-center gap-3 text-sm text-muted-foreground">
              <svg class="w-5 h-5 text-green-500 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Learn at your own pace
            </li>
          </ul>
          <a href="/coming-soon" class="inline-flex items-center gap-2 text-primary hover:underline font-medium">
            Start learning for free
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>

        <!-- For Teams -->
        <div class="bg-card border border-border rounded-2xl p-8 lg:p-10">
          <div class="w-12 h-12 rounded-lg bg-primary/10 text-primary flex items-center justify-center mb-6">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-foreground mb-4">For Teams & Enterprises</h3>
          <p class="text-muted-foreground mb-6">
            Upskill your workforce with custom learning programs, team analytics, and enterprise-grade security.
          </p>
          <ul class="space-y-3 mb-8">
            <li class="flex items-center gap-3 text-sm text-muted-foreground">
              <svg class="w-5 h-5 text-green-500 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Team management dashboard
            </li>
            <li class="flex items-center gap-3 text-sm text-muted-foreground">
              <svg class="w-5 h-5 text-green-500 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Advanced analytics & reporting
            </li>
            <li class="flex items-center gap-3 text-sm text-muted-foreground">
              <svg class="w-5 h-5 text-green-500 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              SSO & enterprise integrations
            </li>
            <li class="flex items-center gap-3 text-sm text-muted-foreground">
              <svg class="w-5 h-5 text-green-500 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Dedicated account manager
            </li>
          </ul>
          <a href="/contact?type=sales" class="inline-flex items-center gap-2 text-primary hover:underline font-medium">
            Contact sales
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <Testimonials
    title={t('testimonials.title')}
    subtitle={t('testimonials.subtitle')}
    testimonials={testimonials}
  />

  <Pricing
    title={t('pricing.title')}
    subtitle={t('pricing.subtitle')}
    plans={pricingPlans}
    billingToggle={{
      monthly: 'Monthly',
      annual: 'Annual',
      annualDiscount: '-20%',
    }}
  />

  <CTA
    title={t('cta.title')}
    subtitle={t('cta.subtitle')}
    primaryCta={{ text: t('cta.button'), href: '/coming-soon' }}
    note={t('cta.note')}
    variant="gradient"
  />
</Layout>
