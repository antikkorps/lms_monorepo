---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/sections/Hero.astro';
import CTA from '../components/sections/CTA.astro';
import Card from '../components/ui/Card.astro';

const values = [
  {
    icon: 'üéØ',
    title: 'Learning First',
    description: 'Everything we build starts with one question: does this help people learn better? We prioritize educational outcomes over engagement metrics.',
  },
  {
    icon: 'ü§ù',
    title: 'Accessibility',
    description: 'Education should be available to everyone. We design our platform to be accessible, affordable, and available in multiple languages.',
  },
  {
    icon: 'üî¨',
    title: 'Science-Backed',
    description: 'Our learning methodologies are grounded in cognitive science and educational research. We continuously test and improve based on learning outcomes.',
  },
  {
    icon: 'üå±',
    title: 'Continuous Growth',
    description: 'Learning never stops. We encourage our team and our users to embrace lifelong learning and constantly expand their horizons.',
  },
];

const stats = [
  { value: '500K+', label: 'Active Learners' },
  { value: '10K+', label: 'Courses' },
  { value: '150+', label: 'Countries' },
  { value: '95%', label: 'Satisfaction Rate' },
];
---

<Layout
  title="About Us - IQON-IA"
  description="Learn about our mission to democratize education through AI-powered learning. Meet the team behind IQON-IA."
  canonicalPath="/about"
>
  <Hero
    title="Empowering learners worldwide"
    subtitle="We believe everyone deserves access to quality education. Our mission is to make learning more personalized, accessible, and effective through technology."
    size="md"
  />

  <!-- Mission Section -->
  <section class="py-20 sm:py-28">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <div>
          <h2 class="text-3xl sm:text-4xl font-bold text-foreground mb-6">
            Our Story
          </h2>
          <div class="space-y-4 text-muted-foreground">
            <p>
              IQON-IA was founded with a simple but ambitious goal: to make quality education accessible to everyone, everywhere. We saw how traditional learning was often one-size-fits-all, expensive, and disconnected from real-world needs.
            </p>
            <p>
              We started building a platform that could adapt to each learner's unique needs, leveraging AI to create personalized learning experiences at scale. What began as a small project has grown into a platform serving hundreds of thousands of learners worldwide.
            </p>
            <p>
              Today, we continue to push the boundaries of what's possible in online education. Our team of educators, engineers, and AI researchers work together to create learning experiences that are engaging, effective, and accessible to all.
            </p>
          </div>
        </div>
        <div class="aspect-video bg-muted rounded-xl flex items-center justify-center">
          <svg class="w-24 h-24 text-muted-foreground/20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-16 bg-muted">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {stats.map((stat) => (
          <div class="text-center">
            <p class="text-4xl sm:text-5xl font-bold text-primary">{stat.value}</p>
            <p class="mt-2 text-muted-foreground">{stat.label}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Values Section -->
  <section class="py-20 sm:py-28">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-foreground">
          Our Values
        </h2>
        <p class="mt-4 text-lg text-muted-foreground">
          These principles guide everything we do, from product decisions to how we work together as a team.
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {values.map((value, index) => (
          <Card padding="lg" class={`animate-slide-up stagger-${index + 1}`}>
            <div class="text-4xl mb-4">{value.icon}</div>
            <h3 class="text-xl font-semibold text-foreground mb-2">
              {value.title}
            </h3>
            <p class="text-muted-foreground">
              {value.description}
            </p>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Team Section (Optional - keeping it minimal) -->
  <section class="py-20 sm:py-28 bg-muted">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-foreground">
          Join Our Team
        </h2>
        <p class="mt-4 text-lg text-muted-foreground">
          We're always looking for passionate people who want to make a difference in education. Check out our open positions.
        </p>
        <a
          href="/careers"
          class="mt-8 inline-flex items-center gap-2 text-primary hover:underline font-medium"
        >
          View Open Positions
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <CTA
    title="Ready to start your learning journey?"
    subtitle="Join hundreds of thousands of learners advancing their skills with IQON-IA."
    primaryCta={{ text: 'Get Started Free', href: '/coming-soon' }}
    variant="gradient"
  />
</Layout>
