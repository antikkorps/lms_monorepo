---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/sections/Hero.astro';
import Features from '../components/sections/Features.astro';
import CTA from '../components/sections/CTA.astro';
import Card from '../components/ui/Card.astro';
import { useTranslations } from '../i18n';

const t = useTranslations('en');

const coreFeatures = [
  {
    icon: 'ai',
    title: t('features.ai.title'),
    description: t('features.ai.description'),
  },
  {
    icon: 'content',
    title: t('features.content.title'),
    description: t('features.content.description'),
  },
  {
    icon: 'progress',
    title: t('features.progress.title'),
    description: t('features.progress.description'),
  },
  {
    icon: 'collab',
    title: t('features.collab.title'),
    description: t('features.collab.description'),
  },
  {
    icon: 'certificate',
    title: t('features.certificate.title'),
    description: t('features.certificate.description'),
  },
  {
    icon: 'mobile',
    title: t('features.mobile.title'),
    description: t('features.mobile.description'),
  },
];

const detailedFeatures = [
  {
    title: 'AI-Powered Learning Paths',
    description: 'Our advanced AI analyzes your goals, current skills, and learning patterns to create a personalized curriculum just for you. As you progress, the system adapts and optimizes your learning path.',
    benefits: [
      'Personalized course recommendations',
      'Adaptive difficulty adjustment',
      'Smart skill gap analysis',
      'Progress predictions',
    ],
    image: '/images/feature-ai.svg',
    reverse: false,
  },
  {
    title: 'Rich Content Library',
    description: 'Access thousands of high-quality courses covering everything from technical skills to soft skills. Our content is created by industry experts and updated regularly.',
    benefits: [
      'Video lessons with subtitles',
      'Interactive exercises',
      'Downloadable resources',
      'Real-world projects',
    ],
    image: '/images/feature-content.svg',
    reverse: true,
  },
  {
    title: 'Team Management',
    description: 'Empower your organization with powerful team management tools. Assign courses, track progress, and measure the impact of learning on your business.',
    benefits: [
      'Role-based access control',
      'Team analytics dashboard',
      'Custom learning paths',
      'Bulk user management',
    ],
    image: '/images/feature-team.svg',
    reverse: false,
  },
  {
    title: 'Enterprise Integrations',
    description: 'Seamlessly integrate with your existing tools and workflows. Our platform connects with popular HR systems, communication tools, and identity providers.',
    benefits: [
      'SSO with SAML & OAuth',
      'Slack & Teams integration',
      'API for custom integrations',
      'Webhook notifications',
    ],
    image: '/images/feature-integrations.svg',
    reverse: true,
  },
];
---

<Layout
  title="Features - IQON-IA"
  description="Discover all the features that make IQON-IA the best choice for modern learning. AI-powered paths, rich content, team management, and more."
  canonicalPath="/features"
>
  <Hero
    title="Powerful features for modern learning"
    subtitle="Everything you need to learn, grow, and succeed - all in one platform."
    primaryCta={{ text: 'Get Started Free', href: '/coming-soon' }}
    secondaryCta={{ text: 'View Pricing', href: '/pricing' }}
    size="md"
  />

  <Features
    title={t('features.title')}
    subtitle={t('features.subtitle')}
    features={coreFeatures}
  />

  <!-- Detailed Features -->
  <section class="py-20 sm:py-28">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="space-y-24 lg:space-y-32">
        {detailedFeatures.map((feature) => (
          <div class={`flex flex-col ${feature.reverse ? 'lg:flex-row-reverse' : 'lg:flex-row'} gap-12 lg:gap-16 items-center`}>
            <div class="flex-1">
              <h3 class="text-2xl sm:text-3xl font-bold text-foreground mb-4">
                {feature.title}
              </h3>
              <p class="text-lg text-muted-foreground mb-6">
                {feature.description}
              </p>
              <ul class="space-y-3">
                {feature.benefits.map((benefit) => (
                  <li class="flex items-center gap-3">
                    <svg class="w-5 h-5 text-green-500 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span class="text-muted-foreground">{benefit}</span>
                  </li>
                ))}
              </ul>
            </div>
            <div class="flex-1">
              <div class="aspect-video bg-muted rounded-xl flex items-center justify-center">
                <svg class="w-24 h-24 text-muted-foreground/20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- For Learners vs For Teams -->
  <section id="integrations" class="py-20 sm:py-28 bg-muted">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-foreground">
          Built for everyone
        </h2>
        <p class="mt-4 text-lg text-muted-foreground">
          Whether you're learning on your own or managing a team, we have the right features for you.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        <Card padding="lg">
          <h3 class="text-xl font-bold text-foreground mb-4">For Learners</h3>
          <ul class="space-y-4">
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-primary shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
              </svg>
              <div>
                <p class="font-medium text-foreground">Personalized AI recommendations</p>
                <p class="text-sm text-muted-foreground">Get course suggestions tailored to your goals</p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-primary shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
              </svg>
              <div>
                <p class="font-medium text-foreground">Earn certificates</p>
                <p class="text-sm text-muted-foreground">Showcase your skills with recognized credentials</p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-primary shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
              </svg>
              <div>
                <p class="font-medium text-foreground">Learn anywhere</p>
                <p class="text-sm text-muted-foreground">Access courses on any device, even offline</p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-primary shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z" />
              </svg>
              <div>
                <p class="font-medium text-foreground">Community support</p>
                <p class="text-sm text-muted-foreground">Connect with fellow learners and mentors</p>
              </div>
            </li>
          </ul>
        </Card>

        <Card padding="lg">
          <h3 class="text-xl font-bold text-foreground mb-4">For Teams</h3>
          <ul class="space-y-4">
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-primary shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
              <div>
                <p class="font-medium text-foreground">Team management</p>
                <p class="text-sm text-muted-foreground">Easily manage users, roles, and permissions</p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-primary shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 8v8m-4-5v5m-4-2v2m-2 4h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <div>
                <p class="font-medium text-foreground">Advanced analytics</p>
                <p class="text-sm text-muted-foreground">Track progress and measure learning impact</p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-primary shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
              <div>
                <p class="font-medium text-foreground">Enterprise security</p>
                <p class="text-sm text-muted-foreground">SSO, SOC 2 compliance, and more</p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-primary shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
              <div>
                <p class="font-medium text-foreground">Dedicated support</p>
                <p class="text-sm text-muted-foreground">Get help from our enterprise success team</p>
              </div>
            </li>
          </ul>
        </Card>
      </div>
    </div>
  </section>

  <CTA
    title="Ready to transform your learning?"
    subtitle="Start your free trial today and experience the future of education."
    primaryCta={{ text: 'Start Free Trial', href: '/coming-soon' }}
    secondaryCta={{ text: 'Talk to Sales', href: '/contact?type=sales' }}
    variant="gradient"
  />
</Layout>
