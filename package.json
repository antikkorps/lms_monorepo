{
  "name": "@lms/source",
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start:api": "nx serve api",
    "start:app": "nx serve app",
    "start:landing": "nx serve landing",
    "build": "nx run-many -t build",
    "test": "nx run-many -t test",
    "lint": "nx run-many -t lint",
    "prepare": "husky",
    "db:up": "docker compose up -d postgres redis",
    "db:down": "docker compose down",
    "db:schema": "docker exec -i lms-postgres psql -U lms -d lms < docker/postgres/schema.sql",
    "db:seed": "docker exec -i lms-postgres psql -U lms -d lms < docker/postgres/seed.sql",
    "db:reset": "npm run db:schema && npm run db:seed",
    "db:psql": "docker exec -it lms-postgres psql -U lms -d lms"
  },
  "private": true,
  "devDependencies": {
    "@nx/esbuild": "^22.4.1",
    "@nx/eslint": "^22.4.1",
    "@nx/js": "22.4.1",
    "@nx/node": "^22.4.1",
    "@nx/vite": "^22.4.1",
    "@nx/web": "^22.4.1",
    "@swc-node/register": "~1.11.1",
    "@swc/core": "~1.15.10",
    "@swc/helpers": "~0.5.11",
    "@tailwindcss/vite": "^4.1.18",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.18",
    "@vue/compiler-sfc": "^3.5.27",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.23",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lightningcss": "^1.30.2",
    "lint-staged": "^16.2.7",
    "nx": "22.4.1",
    "postcss": "^8.5.6",
    "prettier": "~3.8.1",
    "tailwindcss": "^4.1.18",
    "tslib": "^2.3.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.53.1",
    "vitest": "^4.0.17",
    "vue-tsc": "^3.2.4"
  },
  "workspaces": [
    "apps/*",
    "libs/*",
    "libs/shared/*"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "google-auth-library": "^10.5.0",
    "jose": "^6.1.3",
    "lucide-vue-next": "^0.562.0",
    "reka-ui": "^2.7.0",
    "slugify": "^1.6.6",
    "tailwind-merge": "^3.4.0"
  }
}
